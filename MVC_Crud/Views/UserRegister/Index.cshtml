@model MVC_Crud.Models.User
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "User Registration Form";
}
<h2>Fill up the form</h2>
<form asp-action="Register" method="post">
    <div class="form-group">
        <label class="form-label">First Name</label>
        <input class="form-control" asp-for="FirstName" />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Last Name</label>
        <input class="form-control" asp-for="LastName" />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Age </label>
        <input class="form-control" asp-for="Age" />
        <span class="text-danger" asp-validation-for="Age"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Gender</label>
        <input class="form-control" asp-for="Gender" />
        <span class="text-danger" asp-validation-for="Gender"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Address</label>
        <input class="form-control" asp-for="Address" />
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>


    <div class="form-group">
        <label class="form-label">Email Address</label>
        <input class="form-control" asp-for="country" />
        <span class="text-danger" asp-validation-for="country"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Civil Status</label>
        <input class="form-control" asp-for="civilStatus" />
        <span class="text-danger" asp-validation-for="civilStatus"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Religion</label>
        <input class="form-control" asp-for="Religion" />
        <span class="text-danger" asp-validation-for="Religion"></span>
    </div>
    <button type="submit" class="btn btn-success">Register</button>
</form>